{% extends 'base.html.twig' %}

{% block title %}Liste des newsletters
{% endblock %}

{% block body %}
	<h2>Liste des newsletters</h2>
	<div>
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Date</th>
				<th>Categories</th>
				<th>Inscrits</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for newsletter in newsletters %}
				<tr>
					<td>{{newsletter.id}}</td>
					<td>{{newsletter.name}}</td>
					<td>{{newsletter.createdAt|date("m/d/Y")}}</td>
					<td>{{newsletter.categories.name}}</td>
					<td>{{newsletter.categories.users|length}}</td>
					<td>
						{% if newsletter.isSend == false %}
							<a href="{{ path("newsletters_send", {id: newsletter.id}) }}">Envoyez</a>
						{% endif %}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</div>
{% endblock %}
